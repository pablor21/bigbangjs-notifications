{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "paths": {
            "@bigbangjs/notify": [
                "./packages/core/src"
            ],
            "@bigbangjs/notify-(.*)": [
                "./packages/$1/src"
            ],
        }
    },
    "exclude": [
        "**node_modules**",
        "**dist**",
        "**/*.js",
        "**/*spec.ts"
    ]
}